{
  "name": "tabnews-clone",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "node infra/scripts/dev.js",
    "dev:script": "pnpm run services:up && pnpm run services:wait:database && pnpm migrations:up && next dev",
    "postdev": "pnpm run services:stop",
    "test": "pnpm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "posttest": "pnpm run services:stop",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down -v",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate --envPath .env.development -m infra/migrations create",
    "migrations:up": "node-pg-migrate --envPath .env.development -m infra/migrations up",
    "migrations:up:dry": "node-pg-migrate --envPath .env.development -m infra/migrations --dry-run up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.26.0",
  "dependencies": {
    "async-retry": "1.3.3",
    "bcryptjs": "3.0.2",
    "cookie": "1.0.2",
    "dotenv": "16.4.4",
    "dotenv-expand": "11.0.6",
    "next": "14.2.5",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "nodemailer": "7.0.5",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.2.5",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.2.2",
    "@faker-js/faker": "9.7.0",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "set-cookie-parser": "2.7.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "24"
  }
}
